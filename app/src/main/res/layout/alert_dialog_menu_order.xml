<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_b_white_br_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_dialog_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abore et dolore magna aliqua"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/grey_777777"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_dialog_quantity_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_dialog_quantity_label_quantity"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_dish_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_dialog_minus_sign"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_minus_sign"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_quantity_label"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/iv_dialog_plus_sign"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_plus_sign"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_quantity_label"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_dialog_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="24sp"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_quantity_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_dialog_dish_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="33.01 â‚¬"
            android:textSize="24sp"
            android:textColor="@color/grey_777777"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_quantity_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/dialog_line_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pink"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_dish_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_dialog_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_dialog_add_text"
            android:textSize="24sp"
            android:textColor="@color/pink"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_line_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
