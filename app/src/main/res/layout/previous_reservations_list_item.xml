<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/upcoming_image_date_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/modifiedPrimaryColor"
    android:paddingTop="15dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_previous_restaurant_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_sign_in"
        app:riv_corner_radius="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
				android:id="@+id/supprimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Supprimer"
                android:textColor="@color/pink"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_previous_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="left"
            android:text="Pepenero"
            android:textColor="@color/white"
            android:textSize="@dimen/app_text_size" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="3"
            >

            <TextView
                android:id="@+id/tv_previous_reservation_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="16/10/2018"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_previous_reservation_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="21h00"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/app_text_size"
                />
            <TextView
                android:id="@+id/tv_upcoming_reservation_persons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:layout_weight="1"
                android:text="4 Personnes"
                android:textColor="@color/white"
                android:textSize="@dimen/app_text_size"
                />
        </LinearLayout>
        <Button
            android:id="@+id/viewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewDetails"
            android:textColor="@color/pink"
            android:background="@drawable/shape_rounded_pinc_btn"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>



</FrameLayout>
