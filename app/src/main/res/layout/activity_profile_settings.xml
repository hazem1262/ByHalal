<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	tools:context="com.example.alexander.halalappv1.activities.ProfileSettingsActivity"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">

	<android.support.constraint.ConstraintLayout
		android:id="@+id/profile_settings_header_layout"
		android:layout_width="match_parent"
		android:layout_height="@dimen/app_header_max_height"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_my_profile_label_text"
				android:textSize="@dimen/app_text_size"
				android:textColor="@color/black_2A2C34"
				android:fontFamily="@font/montserrat_semibold"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_profile_settings_label_text"
				android:textSize="@dimen/app_text_size"
				android:textColor="@color/pink"
				android:fontFamily="@font/opensans_regular"
				android:layout_gravity="center"/>

		</LinearLayout>

		<ImageView
			android:id="@+id/profile_settings_arrow_back"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/ic_arrow_left_black"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/grey_D9D9D9"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/profile_settings_account_info_layout"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		app:layout_constraintTop_toBottomOf="@id/profile_settings_header_layout"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent">

		<ImageView
			android:id="@+id/iv_profile_settings_account_info_icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_profile_pink"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/tv_profile_settings_account_info_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/tv_profile_settings_account_info_label_text"
			android:textSize="@dimen/app_text_size"
			android:textColor="@color/black_2A2C34"
			android:fontFamily="@font/opensans_bold"
			android:gravity="left"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/iv_profile_settings_account_info_icon"
			app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right_1"/>

		<ImageView
			android:id="@+id/iv_arrow_right_1"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_arrow_right_black"
			android:layout_marginRight="@dimen/screen_right_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="10dp"
			android:background="@color/grey_F4F4F4"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/profile_settings_about_by_hallal_layout"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		app:layout_constraintTop_toBottomOf="@id/profile_settings_account_info_layout"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent">

		<ImageView
			android:id="@+id/iv_profile_settings_about_by_hallal_icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_information_pink"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/tv_profile_settings_about_by_hallal_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/tv_profile_settings_about_by_hallal_label_text"
			android:textSize="@dimen/app_text_size"
			android:textColor="@color/black_2A2C34"
			android:fontFamily="@font/opensans_bold"
			android:gravity="left"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/iv_profile_settings_about_by_hallal_icon"
			app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right_2"/>

		<ImageView
			android:id="@+id/iv_arrow_right_2"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_arrow_right_black"
			android:layout_marginRight="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="10dp"
			android:background="@color/grey_F4F4F4"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/profile_settings_language_layout"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		app:layout_constraintTop_toBottomOf="@id/profile_settings_about_by_hallal_layout"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent">

		<ImageView
			android:id="@+id/iv_profile_settings_language_icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_lang_en_pink"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/tv_profile_settings_language_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/tv_profile_settings_language_label_text"
			android:textSize="@dimen/app_text_size"
			android:textColor="@color/black_2A2C34"
			android:fontFamily="@font/opensans_bold"
			android:layout_marginLeft="@dimen/screen_left_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toRightOf="@id/iv_profile_settings_language_icon"/>

		<ImageView
			android:id="@+id/iv_profile_settings_language_arrow_right"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_arrow_right_black"
			android:layout_marginRight="@dimen/screen_right_margin"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

		<View
			android:id="@+id/profile_settings_language_line"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/grey_F4F4F4"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/profile_settings_select_language_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/profile_settings_language_layout"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:visibility="gone"
		tools:visibility="visible">

		<android.support.constraint.ConstraintLayout
			android:id="@+id/profile_settings_language_en"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			app:layout_constraintTop_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">

			<ImageView
				android:id="@+id/iv_en_checked_icon"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:src="@drawable/ic_checked_lang_pink"
				android:layout_marginLeft="@dimen/screen_left_margin"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_profile_settings_language_english_label_text"
				android:textSize="@dimen/app_text_size"
				android:textColor="@color/pink"
				android:fontFamily="@font/opensans_bold"
				android:layout_marginLeft="@dimen/screen_left_margin"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/iv_en_checked_icon"/>

		</android.support.constraint.ConstraintLayout>

		<android.support.constraint.ConstraintLayout
			android:id="@+id/profile_settings_language_fr"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			app:layout_constraintTop_toBottomOf="@id/profile_settings_language_en"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent">

			<ImageView
				android:id="@+id/iv_fr_checked_icon"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:src="@drawable/ic_checked_lang_pink"
				android:layout_marginLeft="@dimen/screen_left_margin"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_profile_settings_language_french_label_text"
				android:textSize="@dimen/app_text_size"
				android:textColor="@color/pink"
				android:fontFamily="@font/opensans_bold"
				android:layout_marginLeft="@dimen/screen_left_margin"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/iv_fr_checked_icon"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/grey_F4F4F4"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>

		</android.support.constraint.ConstraintLayout>

	</android.support.constraint.ConstraintLayout>

	<TextView
		android:id="@+id/tv_profile_settings_sign_out"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/tv_profile_settings_sign_out_text"
		android:textSize="@dimen/app_text_size"
		android:textColor="@color/pink"
		android:fontFamily="@font/opensans_regular"
		android:layout_marginBottom="48dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
