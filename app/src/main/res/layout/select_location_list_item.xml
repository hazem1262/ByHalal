<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/iv_select_location_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_location_black"
        android:layout_marginLeft="@dimen/screen_left_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_select_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Montreal, QC, Canada"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/black_2A2C34"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:layout_marginLeft="@dimen/screen_left_margin"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_select_location_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
