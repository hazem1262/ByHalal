<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--Header Layout-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/home_fragment_header_layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/background_search_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!--Search Layout-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/home_fragment_search_layout"
            android:layout_width="match_parent"
            android:maxWidth="@dimen/app_max_width"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white_b_white_br_4"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="@dimen/screen_left_margin"
            android:layout_marginRight="@dimen/screen_right_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_home_fragment_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_home_search_text"
                    android:textColor="@color/grey_777777"
                    android:textSize="@dimen/app_text_size"
                    android:fontFamily="@font/opensans_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_home_fragment_search_icon"/>

                <ImageView
                    android:id="@+id/iv_home_fragment_search_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_text_view_search"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_home_fragment_search"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <!--Good Morning Label-->
        <TextView
            android:id="@+id/tv_home_fragment_good_morning_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_good_morning_label_text"
            android:textColor="@color/white"
            android:textSize="@dimen/app_text_size"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="@dimen/screen_left_margin"
            android:layout_marginRight="@dimen/screen_right_margin"
            app:layout_constraintTop_toBottomOf="@+id/home_fragment_search_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!--Current Location Button-->
        <Button
            android:id="@+id/btn_home_fragment_current_location"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/btn_home_current_location_text"
            android:textAllCaps="false"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_regular"
            android:drawableLeft="@drawable/ic_button_location"
            android:drawableRight="@drawable/ic_button_arrow_down"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_bg_transparent_b_white_br_25"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_fragment_good_morning_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <!--Tables Recycler View-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_fragment_tables_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/pb_home_fragment_loading_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/layout_progress_bar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/home_fragment_permission_not_granted_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/layout_permission_not_granted"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/home_fragment_gps_disabled_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/layout_gps_disabled"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/home_fragment_data_not_found_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/layout_data_not_found_for_current_location"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/home_fragment_location_not_detected_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/layout_location_not_detected"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_home_fragment_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/black_2A2C34"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/screen_left_margin"
        android:layout_marginRight="@dimen/screen_right_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
