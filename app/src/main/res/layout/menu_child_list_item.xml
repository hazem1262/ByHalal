<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_707070">

    <TextView
        android:id="@+id/tv_menu_child_dish_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_child_quantity"
        app:layout_constraintRight_toLeftOf="@+id/tv_menu_child_dish_price"/>

    <TextView
        android:id="@+id/tv_menu_child_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_child_dish_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_menu_child_quantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/pink"

        android:gravity="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/line_pink"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/pink"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_menu_child_quantity"
        app:layout_constraintRight_toRightOf="@id/tv_menu_child_quantity" />

    <View
        android:id="@+id/line_grey"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="@color/modifiedPrimaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_menu_child_quantity"
        app:layout_constraintRight_toRightOf="@id/tv_menu_child_dish_price"/>

</android.support.constraint.ConstraintLayout>
