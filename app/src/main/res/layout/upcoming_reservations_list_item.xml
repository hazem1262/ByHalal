<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/upcoming_image_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/iv_upcoming_restaurant_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/background_sign_in"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_upcoming_reservation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fri,32/2"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/upcoming_name_details_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/upcoming_image_date_layout"
        app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right">

        <TextView
            android:id="@+id/tv_upcoming_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pepenero"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_bold"
            android:gravity="left"
            android:layout_marginLeft="@dimen/screen_left_margin"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_upcoming_reservation_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13:45 for table of two"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_regular"
            android:gravity="left"
            android:layout_marginLeft="@dimen/screen_left_margin"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_restaurant_name"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right_black"
        android:layout_marginRight="@dimen/screen_right_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
