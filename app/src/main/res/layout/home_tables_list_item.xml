<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_home_table_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last minute tables"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/screen_left_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_home_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_see_all_text"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:fontFamily="@font/opensans_light"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_table_header"
        app:layout_constraintLeft_toRightOf="@id/tv_home_table_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_table_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey_707070"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_home_restaurants"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
