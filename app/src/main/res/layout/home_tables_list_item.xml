<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools">

	<com.google.android.flexbox.FlexboxLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:flexDirection="row"
		app:flexWrap="wrap">
		<TextView
			android:id="@+id/tv_home_table_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/screen_left_margin"
			android:fontFamily="@font/avenir_heavy"
			android:includeFontPadding="false"
			android:text="Les meilleurs restaurant"
			android:textColor="@color/white"
			android:textSize="@dimen/app_sub_header"/>

		<TextView
			android:id="@+id/tv_home_see_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:fontFamily="@font/avenir_light"
			android:includeFontPadding="false"
			android:text="@string/tv_see_all_text"
			android:gravity="center"
			android:textColor="@color/grey_E0DCDC"
			android:textSize="@dimen/app_text_size" />
	</com.google.android.flexbox.FlexboxLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
		android:scrollbars="none"
		tools:listitem=""/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
