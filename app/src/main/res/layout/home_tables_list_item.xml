<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:weightSum="4"
		>

		<TextView
			android:id="@+id/tv_home_table_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/screen_left_margin"
			android:layout_marginTop="16dp"
			android:fontFamily="@font/avenir_heavy"
			android:includeFontPadding="false"
			android:text="Les meilleurs restaurants"
			android:textColor="@color/white"
			android:textSize="20sp"/>

		<TextView
			android:id="@+id/tv_home_see_all"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="5dp"
			android:fontFamily="@font/avenir_light"
			android:includeFontPadding="false"
			android:text="@string/tv_see_all_text"
			android:textColor="@color/grey_E0DCDC"
			android:textSize="@dimen/app_text_size" />
	</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

		tools:listitem=""/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="@color/grey_707070"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/rv_home_restaurants"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"/>-->

</android.support.constraint.ConstraintLayout>
