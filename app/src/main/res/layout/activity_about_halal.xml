<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    tools:context="com.example.alexander.halalappv1.activities.AboutHalalActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_halal_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_header_max_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_my_profile_label_text"
                android:textSize="@dimen/app_text_size"
                android:textColor="@color/black_2A2C34"
                android:fontFamily="@font/montserrat_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_profile_settings_label_text"
                android:textSize="@dimen/app_text_size"
                android:textColor="@color/pink"
                android:fontFamily="@font/opensans_regular"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/about_halal_arrow_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_left_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_D9D9D9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_about_halal_about_by_halal_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_about_halal_about_by_halal_label_text"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/grey_777777"
        android:fontFamily="@font/opensans_regular"
        android:background="@color/grey_F4F4F4"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/screen_left_margin"
        android:paddingRight="@dimen/screen_right_margin"
        app:layout_constraintTop_toBottomOf="@id/about_halal_header_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_halal_confidentiality_policies_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_about_halal_about_by_halal_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_about_halal_confidentiality_policies_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_about_halal_confidentiality_policies_label_text"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_bold"
            android:gravity="left"
            android:layout_marginLeft="@dimen/screen_left_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right_1"/>

        <ImageView
            android:id="@+id/iv_arrow_right_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right_black"
            android:layout_marginRight="@dimen/screen_right_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_D9D9D9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_halal_conditions_of_utilization_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/about_halal_confidentiality_policies_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_about_halal_conditions_of_utilization_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_about_halal_conditions_of_utilization_label_text"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_bold"
            android:gravity="left"
            android:layout_marginLeft="@dimen/screen_left_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right_2"/>

        <ImageView
            android:id="@+id/iv_arrow_right_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right_black"
            android:layout_marginRight="@dimen/screen_right_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_D9D9D9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/about_halal_help_and_assistance_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/about_halal_conditions_of_utilization_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_about_halal_help_and_assistance_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_about_halal_help_and_assistance_label_text"
            android:textSize="@dimen/app_text_size"
            android:textColor="@color/black_2A2C34"
            android:fontFamily="@font/opensans_bold"
            android:gravity="left"
            android:layout_marginLeft="@dimen/screen_left_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_right_3"/>

        <ImageView
            android:id="@+id/iv_arrow_right_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right_black"
            android:layout_marginRight="@dimen/screen_right_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_D9D9D9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
