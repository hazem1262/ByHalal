<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spinner_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/iv_spinner_list_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_cuisine_black"
        android:layout_marginLeft="@dimen/screen_left_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_spinner_list_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Italian"
        android:textSize="@dimen/app_text_size"
        android:textColor="@color/black_2A2C34"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:layout_marginLeft="@dimen/screen_left_margin"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_spinner_list_item_icon"
        app:layout_constraintRight_toLeftOf="@+id/iv_spinner_list_item_arrow_down"/>

    <ImageView
        android:id="@+id/iv_spinner_list_item_arrow_down"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_down_black"
        android:layout_marginRight="@dimen/screen_right_margin"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/spinner_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
