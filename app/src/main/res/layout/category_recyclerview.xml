<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<com.google.android.flexbox.FlexboxLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:flexDirection="row"
		app:flexWrap="wrap">

		<TextView
			android:id="@+id/tv_home_table_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/screen_left_margin"
			android:fontFamily="@font/avenir_heavy"
			android:includeFontPadding="false"
			android:text="Nos sÃ©lections"
			android:textColor="@color/white"
			android:gravity="center"
			android:textSize="@dimen/app_sub_header" />

		<TextView
			android:id="@+id/see_all_category"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:fontFamily="@font/avenir_light"
			android:includeFontPadding="false"
			android:gravity="center"
			android:text="@string/tv_see_all_text"
			android:textColor="@color/grey_E0DCDC"
			android:textSize="@dimen/app_text_size" />
	</com.google.android.flexbox.FlexboxLayout>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/categories_recycler_view"
		android:layout_below="@id/cat_title"
		android:layout_margin="10dp"
		android:scrollbars="none"
		android:layout_width="match_parent"
		android:background="@color/modifiedPrimaryColor"
		android:layout_height="wrap_content"
		/>
</LinearLayout>