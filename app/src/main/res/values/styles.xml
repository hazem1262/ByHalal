<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="backText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
    </style>
    <!--Full Screen Style-->
    <style name="FullScreenCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--No Title Bar Style-->
    <style name="NoTitleBarCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--Tab Layout Style-->
    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#00000000</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:background">@color/modifiedPrimaryColor</item>
        <item name="tabBackground">@color/modifiedPrimaryColor</item>
    </style>

    <!--Calendar Style-->
    <style name="CustomTextHeaderAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/avenir_black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/black_2A2C34</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/avenir_black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="CustomTextDayAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/calender_text_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/avenir_black</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!--Working Hours Current Day Style-->
    <style name="CurrentDayStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/avenir_black</item>
    </style>

</resources>
