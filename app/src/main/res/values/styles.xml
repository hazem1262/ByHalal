<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Full Screen Style-->
    <style name="FullScreenCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--No Title Bar Style-->
    <style name="NoTitleBarCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--Tab Layout Style-->
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">#00000000</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <!--Calendar Style-->
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/black_2A2C34</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!--Working Hours Current Day Style-->
    <style name="CurrentDayStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>
